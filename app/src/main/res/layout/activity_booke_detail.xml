<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.qq.readbook.ui.book.BookDetailViewModel" />


    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        tools:context=".ui.book.BookDetailActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <ImageView
                android:id="@+id/ivBookCover"
                android:layout_width="55dp"
                android:layout_height="75dp"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="10dp"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@mipmap/cover_default"
                app:url="@{vm.book.imgUrl}" />

            <TextView
                android:id="@+id/tvBookListTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/ivBookCover"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@{vm.book.name}"
                android:textSize="16sp"
                tools:text="武侠世界自由行" />

            <TextView
                android:id="@+id/tvBookListAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvBookListTitle"
                android:layout_toRightOf="@+id/ivBookCover"
                android:ellipsize="end"
                android:singleLine="true"
                android:text='@{vm.book.author+"    "}'
                android:textSize="13sp"
                tools:text="w风雪 | " />

            <TextView
                android:id="@+id/tvCatgory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvBookListTitle"
                android:layout_toRightOf="@id/tvBookListAuthor"
                android:ellipsize="end"
                android:singleLine="true"
                android:text='@{vm.book.type+"|"}'
                android:textSize="13sp"
                tools:text="仙侠 | " />

            <TextView
                android:id="@+id/tvWordCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvBookListTitle"
                android:layout_toRightOf="@id/tvCatgory"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="13sp"
                tools:text="594万字" />

            <TextView
                android:id="@+id/tvLatelyUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvBookListAuthor"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/ivBookCover"
                android:ellipsize="end"
                android:singleLine="true"

                android:textSize="13sp"
                tools:text="4月前" />

        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:ellipsize="end"
            android:maxLines="4"
            android:padding="15dp"
            android:text="@{vm.book.desc}"
            android:textSize="15sp" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivBookCover"
            android:paddingHorizontal="@dimen/x20"
            android:layout_marginTop="10dp">

            <com.qq.readbook.weight.DrawableCenterButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_common_btn_solid_selector"
                android:clickable="true"
                android:drawableLeft="@mipmap/book_detail_info_add_img"
                android:drawablePadding="5dp"
                android:onClick="@{vm::onAddBook}"
                android:padding="10dp"
                android:text="@{vm.addBookMenu}"
                android:textColor="@color/white" />

            <com.qq.readbook.weight.DrawableCenterButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_common_btn_solid_selector"
                android:clickable="true"
                android:drawableLeft="@mipmap/book_detail_info_search_img"
                android:drawablePadding="5dp"
                android:onClick="@{vm::onRead}"
                android:padding="10dp"
                android:text="开始阅读"
                android:textColor="@color/white" />
        </LinearLayout>


    </LinearLayout>
</layout>

